{
  "name": "web-filter-extension",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web-filter-extension/src",
  "type": "module",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "viteConfig" : "apps/web-filter-extension/vite.config.mts",
        "outputPath": "dist/apps/web-filter-extension",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      },
      "dependsOn": [
        {
          "target": "build:content",
          "projects": "self"
        }
      ]
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-filter-extension:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "web-filter-extension:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "web-filter-extension:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-filter-extension:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "web-filter-extension:build:development"
        },
        "production": {
          "buildTarget": "web-filter-extension:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/web-filter-extension/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/web-filter-extension/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "web-filter-extension:build"
      }
    }
  },
  "tags": []
}
