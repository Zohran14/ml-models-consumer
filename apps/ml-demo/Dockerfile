#
# Build the docker image with `npx nx docker-build ml-demo`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t ml-demo`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system ml-demo && \
          adduser --system -G ml-demo ml-demo

COPY dist/apps/ml-demo ml-demo
RUN chown -R ml-demo:ml-demo .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix ml-demo --omit=dev -f install

CMD [ "node", "ml-demo" ]
